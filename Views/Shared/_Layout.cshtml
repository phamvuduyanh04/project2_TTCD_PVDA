<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom style for vertical navbar */
        .navbar-vertical {
            width: 200px;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* màu nền tối */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding-top: 20px;
            padding-bottom: 20px;
        }

            .navbar-vertical .navbar-brand {
                text-align: center;
                color: white;
                font-size: 1.2em;
                margin-bottom: 1em;
            }

            .navbar-vertical .nav-item {
                margin-bottom: 10px;
            }

            .navbar-vertical .nav-link {
                color: white;
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 10px 15px;
                transition: background-color 0.3s;
                border-radius: 4px;
            }

                .navbar-vertical .nav-link:hover {
                    color: #ffc107;
                    background-color: #495057;
                }

        /* Style for main content to avoid overlap with navbar */
        .body-content {
            margin-left: 220px; /* Đẩy nội dung sang phải để không bị đè lên thanh điều hướng dọc */
            padding-top: 20px;
        }

        footer {
            text-align: center;
            padding: 1em 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark navbar-vertical">
        <div>
            @Html.ActionLink("Ha Quoc Thanh", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <ul class="navbar-nav flex-column mt-3">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("About", "Home")" class="nav-link">
                        <i class="fas fa-info-circle"></i> About
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Contact", "Home")" class="nav-link">
                        <i class="fas fa-envelope"></i> Contact
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "KhachHangs")" class="nav-link">
                        <i class="fas fa-users"></i> KhachHangs
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "ThanhToans")" class="nav-link">
                        <i class="fas fa-credit-card"></i> ThanhToans
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "DatVes")" class="nav-link">
                        <i class="fas fa-ticket-alt"></i> DatVes
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "SanBays")" class="nav-link">
                        <i class="fas fa-plane-departure"></i> SanBays
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "ChuyenBays")" class="nav-link">
                        <i class="fas fa-plane"></i> ChuyenBays
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ha Quoc Thanh </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
