@model IEnumerable<PROJECT2.Models.KhachHang>

@{
    ViewBag.Title = "Danh mục khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Danh sách khách hàng</h2>

<p class="text-right">
    <a href="/KhachHangs/create" class="btn btn-primary my-3">Thêm mới khách hàng</a>
</p>

<table class="table table-bordered table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.HoVaTen)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
            <th>@Html.DisplayNameFor(model => model.NgaySinh)</th>
            <th>@Html.DisplayNameFor(model => model.GioiTinh)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HoVaTen)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                <td>@Html.DisplayFor(modelItem => item.NgaySinh)</td>
                <td>@Html.DisplayFor(modelItem => item.GioiTinh)</td>
                <td>
                    <a href="@Url.Action("Edit", "KhachHangs", new { id = item.MaKhachHang })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Details", "KhachHangs", new { id = item.MaKhachHang })" class="btn btn-sm btn-info">Chi tiết</a>
                    <a href="@Url.Action("Delete", "KhachHangs", new { id = item.MaKhachHang })" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tăng kích thước font chữ và tạo khoảng cách giữa các hàng */
    table {
        font-size: 1rem;
    }

    th, td {
        padding: 12px;
    }
    /* Màu nền của hàng tiêu đề */
    .thead-dark {
        background-color: #343a40;
        color: white;
    }
    /* Hiệu ứng hover cho các hàng */
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
