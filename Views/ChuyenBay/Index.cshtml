@model IEnumerable<PROJECT2.Models.ChuyenBay>

@{
    ViewBag.Title = "Danh sách chuyến bay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Danh sách chuyến bay</h2>

<p class="text-right">
    <a href="/ChuyenBays/create" class="btn btn-primary my-3">Thêm mới chuyến bay</a>
</p>

<table class="table table-striped table-bordered table-hover text-center">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.SoHieuChuyenBay)</th>
            <th>@Html.DisplayNameFor(model => model.GioKhoiHanh)</th>
            <th>@Html.DisplayNameFor(model => model.GioDen)</th>
            <th>@Html.DisplayNameFor(model => model.HangHangKhong)</th>
            <th>@Html.DisplayNameFor(model => model.Gia)</th>
            <th>@Html.DisplayNameFor(model => model.SoGheTrong)</th>
            <th>@Html.DisplayNameFor(model => model.SanBay.TenSanBay)</th>
            <th>@Html.DisplayNameFor(model => model.SanBay1.TenSanBay)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SoHieuChuyenBay)</td>
                <td>@Html.DisplayFor(modelItem => item.GioKhoiHanh)</td>
                <td>@Html.DisplayFor(modelItem => item.GioDen)</td>
                <td>@Html.DisplayFor(modelItem => item.HangHangKhong)</td>
                <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                <td>@Html.DisplayFor(modelItem => item.SoGheTrong)</td>
                <td>@Html.DisplayFor(modelItem => item.SanBay.TenSanBay)</td>
                <td>@Html.DisplayFor(modelItem => item.SanBay1.TenSanBay)</td>
                <td>
                    <a href="@Url.Action("Edit", "ChuyenBays", new { id = item.MaChuyenBay })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Details", "ChuyenBays", new { id = item.MaChuyenBay })" class="btn btn-sm btn-info">Chi tiết</a>
                    <a href="@Url.Action("Delete", "ChuyenBays", new { id = item.MaChuyenBay })" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Căn chỉnh và thay đổi màu nền cho bảng */
    .table {
        font-size: 1rem;
    }

    th, td {
        padding: 10px;
        vertical-align: middle;
    }

    /* Màu nền tiêu đề */
    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    /* Hiệu ứng hover cho các hàng */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Tăng kích thước nút hành động và thêm hiệu ứng */
    .btn-sm {
        margin: 0 5px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    /* Tăng độ rộng cho các cột để dễ nhìn hơn */
    .table th, .table td {
        text-align: center;
    }
</style>
